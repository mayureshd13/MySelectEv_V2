  <style>
    /* About Page Specific Styles */
    .about-hero {
      background: linear-gradient(135deg, #00663d 0%, #223243 100%);
      color: white;
    }
    
    .section-title {
      position: relative;
      display: inline-block;
    }
    
    .section-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 60px;
      height: 4px;
      background: #00dfc4;
      border-radius: 2px;
    }
    
    .platform-card {
      transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
      opacity: 0;
      transform: translateY(30px);
    }
    
    .platform-card.animate {
      opacity: 1;
      transform: translateY(0);
    }
    
    .founder-card {
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
      transition: all 0.4s ease;
      background-color: white;
    }
    
    .founder-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 25px 50px rgba(0, 223, 196, 0.15);
    }
    
    .timeline-item {
      opacity: 0;
      transform: translateX(-30px);
      transition: all 0.6s ease;
    }
    
    .timeline-item.animate {
      opacity: 1;
      transform: translateX(0);
    }
    
    .timeline-item:nth-child(even) {
      transform: translateX(30px);
    }
    
    .timeline-item:nth-child(even).animate {
      transform: translateX(0);
    }
    
    .goal-card {
      opacity: 0;
      transform: scale(0.9);
      transition: all 0.5s ease;
      background-color: white;
    }
    
    .goal-card.animate {
      opacity: 1;
      transform: scale(1);
    }
    
    /* Text colors for light mode */
    .text-primary {
      color: #223243;
    }
    
    .text-secondary {
      color: #00663d;
    }
    
    .text-accent {
      color: #00dfc4;
    }
    
    .text-gray {
      color: #6b7280;
    }
    
    .text-light {
      color: #f3f4f6;
    }
    
    /* Background colors for light mode */
    .bg-primary {
      background-color: #ffffff;
    }
    
    .bg-secondary {
      background-color: #f9fafb;
    }
    
    .bg-accent {
      background-color: #00dfc4;
    }
    
    .bg-dark {
      background-color: #223243;
    }
    
    /* Dark mode overrides */
    .dark-mode .about-hero {
      background: linear-gradient(135deg, #003d2a 0%, #1a2433 100%);
    }
    
    .dark-mode .text-primary {
      color: #f3f4f6;
    }
    
    .dark-mode .text-secondary {
      color: #00dfc4;
    }
    
    .dark-mode .text-gray {
      color: #9ca3af;
    }
    
    .dark-mode .bg-primary {
      background-color: #1a2433;
    }
    
    .dark-mode .bg-secondary {
      background-color: #223243;
    }
    
    .dark-mode .founder-card,
    .dark-mode .goal-card {
      background-color: #1a2433;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }
    
    .dark-mode .timeline::before {
      background: #2d3e52;
    }
    
    .dark-mode .timeline-dot {
      border-color: #00dfc4;
    }
    
    /* Scroll animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }
      to {
